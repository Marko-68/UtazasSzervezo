<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UtazasSzervezo</title>
    <link rel="icon" type="image/png" href="~/images/logousz.png" sizes="32x32">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/logousz.png" alt="UtazasSzervezo Logo" height="30" class="d-inline-block align-top me-2">
                    UtazasSzervezo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Accommodations/Index">Hotels</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Flights/Index">Flights</a>
                        </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <form method="post" asp-page="/Index" asp-page-handler="LaunchWpf">
                            <button type="submit" class="nav-link btn btn-link text-decoration-none p-0">Admin Panel</button>
                        </form>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link" asp-page="/Bookings/MyBookings">My Bookings</a>
                    }
                   
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />

    <footer class="footer">
        <div class="container">
            &copy; @DateTime.Now.Year - UtazasSzervezo - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>