@page
@model UtazasSzervezo_UI.Pages.Flights.IndexModel
@{
    ViewData["Title"] = "Flights";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="container py-4">
    <h1 class="mb-4 fw-bold text-dark">Available Flights</h1>

    <div class="row">
        <!-- Szűrők (Bal oldali panel) -->
        <div class="col-md-3">
            <form method="get">
                <div class="mb-3">
                    <label class="form-label fw-bold">Price Range</label>
                    <input type="range" class="form-range" name="MaxPrice" min="0" max="500"
                           value="@Model.MaxPrice" oninput="this.form.submit()">
                    <p>Max Price: <strong>@Model.MaxPrice</strong> </p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Airlines</label>
                    @foreach (var airline in Model.Airlines)
                    {
                        <div class="form-check">
                            <input type="radio" name="Airline" class="form-check-input"
                                   value="@airline" checked="@(airline == Model.Airline)"
                                   onchange="this.form.submit()">
                            <label class="form-check-label">@airline</label>
                        </div>
                    }
                    <div class="form-check">
                        <input type="radio" name="Airline" class="form-check-input"
                               value="" onchange="this.form.submit()">
                        <label class="form-check-label">All Airlines</label>
                    </div>
                </div>
            </form>
        </div>

        <!-- Járatok listája -->
        <div class="col-md-9">
            <div class="flight-list">
                @foreach (var flight in Model.FilteredFlights)
                {
                    <div class="flight-card mb-4">
                        <div class="flight-header">
                            <div class="flight-time">
                                <div class="departure">
                                    <span class="time">@flight.departure_time.ToString("HH:mm")</span>
                                    <span class="airport">@flight.departure_airport</span>
                                </div>
                                <div class="duration">
                                    <div class="line"></div>
                                    <i class="bi bi-airplane-fill plane-icon"></i>
                                    <span>@flight.duration</span>
                                    <div class="line"></div>
                                </div>
                                <div class="arrival">
                                    <span class="time">@flight.arrival_time.ToString("HH:mm")</span>
                                    <span class="airport">@flight.destination_airport</span>
                                </div>
                            </div>
                            <div class="flight-price">
                                <span class="price">@(flight.price)</span>
                            </div>
                        </div>
                        <div class="flight-footer">
                            <div class="flight-actions">
                                <a asp-page="Details" asp-route-id="@flight.id" class="btn btn-outline-secondary">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.FilteredFlights.Any())
            {
                <div class="alert alert-info">
                    No flights found matching your criteria.
                </div>
            }
        </div>
    </div>
</div>

<style>
    .flight-list {
        max-width: 800px;
        margin: 0 auto;
    }

    .flight-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .flight-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid #eee;
    }

    .flight-time {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .departure, .arrival {
        display: flex;
        flex-direction: column;
    }

    .time {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .airport {
        color: #666;
        font-size: 0.9rem;
    }

    .duration {
        display: flex;
        align-items: center;
        gap: 5px;
        color: #666;
    }

    .line {
        width: 30px;
        height: 1px;
        background-color: #ccc;
    }

    .plane-icon {
        color: #666;
        transform: rotate(90deg);
    }

    .flight-price {
        text-align: right;
    }

    .price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
    }

    .flight-footer {
        padding: 15px 20px;
        background: #f9f9f9;
    }

    .flight-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .btn-outline-secondary {
        border-color: #ddd;
    }
</style>
