@page "{id:int}"
@model UtazasSzervezo_UI.Pages.Flights.DetailsModel
@{
}

<div class="container mt-5">
    @if (Model.Flight != null)
    {
         <div class="col-md-6">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h1 class="card-title fw-bold mb-2">@Model.Flight.airline</h1>
                                <p class="text-muted mb-3"><i class="bi bi-geo-alt-fill"></i> @Model.Flight.departure_airport, @Model.Flight.destination_airport</p>
                            </div>
                        </div>
                    </div>
         </div>

    }
    else
    {
        <div class="alert alert-danger">
            <h4 class="alert-heading">Flight not found</h4>
            <a href="/Flights" class="btn btn-outline-danger">Back to Flights</a>
        </div>
    }
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

}