@page
@model UtazasSzervezo_UI.Pages.Accommodations.IndexModel
@{
    ViewData["Title"] = "Accommodations";
}

<div class="container py-5">
    <h1 class="mb-4 fw-bold text-dark">Available Accommodations</h1>

    <form method="get" class="mb-4">
        <div class="row g-3">
            <div class="col-md-5">
                <input type="text" name="SearchString" class="form-control" placeholder="Search..."
                       value="@Model.SearchString" />
            </div>
            <div class="col-md-2">
                <input type="number" name="MaxPersons" class="form-control" placeholder="Max persons"
                       value="@Model.MaxPersons" min="1" />
            </div>
            <div class="col-md-2">
                <select name="AccommodationType" class="form-select">
                    <option value="">All types</option>
                    @foreach (var type in Model.AccommodationTypes)
                    {
                        <option value="@type" selected="@(type == Model.AccommodationType)">@type</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
            </div>
        </div>
    </form>

    <div class="row">
        @foreach (var item in Model.FilteredAccommodations)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="image-container" style="height: 200px; overflow: hidden;">
                        <img src="@item.cover_img" class="card-img-top h-100 w-100 object-fit-cover" alt="@item.name"
                             onerror="this.src='https://via.placeholder.com/300x200?text=No+Image'">
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-primary">@item.type</span>
                            <span class="badge bg-warning">
                                @for (int i = 0; i < item.star_rating; i++)
                                {
                                    @:★
                                }
                            </span>
                        </div>

                        <h5 class="card-title fw-bold">@item.name</h5>

                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt-fill text-danger"></i> @item.city, @item.country
                        </p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span><i class="bi bi-people"></i> Max @item.max_person persons</span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold text-dark">$@item.price_per_night / Night</span>
                                <a asp-page="Details" asp-route-id="@item.id" class="btn btn-primary">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.FilteredAccommodations.Any())
    {
        <div class="alert alert-info">
            No accommodations found matching your criteria.
        </div>
    }
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }
</style>