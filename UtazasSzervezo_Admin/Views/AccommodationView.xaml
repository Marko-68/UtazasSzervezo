<Window x:Class="UtazasSzervezo_Admin.Views.AccommodationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accommodation" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Accommodations}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}" />
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" />
                    <GridViewColumn Header="Rating" DisplayMemberBinding="{Binding Rating}" />
                    <GridViewColumn Header="Amenities" DisplayMemberBinding="{Binding Amenities}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
    </Window>
