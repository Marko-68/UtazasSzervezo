<Window x:Class="UtazasSzervezo_Admin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtazasSzervezo_Admin.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Navigation Menu -->
        <StackPanel Orientation="Horizontal" Background="#333">
            <Button Content="Utazások" Command="{Binding NavigateCommand}" CommandParameter="travel" Style="{StaticResource NavButtonStyle}"/>
            <Button Content="Felhasználók" Command="{Binding NavigateCommand}" CommandParameter="users" Style="{StaticResource NavButtonStyle}"/>
            <Button Content="Statisztikák" Command="{Binding NavigateCommand}" CommandParameter="stats" Style="{StaticResource NavButtonStyle}"/>
        </StackPanel>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
